room = ""
room_list = ""
def room_format():
	global room
	room = input("Enter room in the Great Hall that you want directions to: ").upper()
	if "GH" in room:
		room = room.replace("GH", "")
	room = room.replace(" ", "")
	return room
def get_room():
	global room
	global room_list
	room_format()
	if "AUD" in room:
		room = "AUD"
	elif "A" in room:
		room = "GHA10"
		return room
	elif "W" in room:
		return room
	while len(room) != 3:
		print("Invalid input, please ")
		room_format()
	room_list = room[:1] + "," + room[1:]
	room_list = room_list.split(",")
	room_list = list(map(int,room_list))
	return room, room_list

